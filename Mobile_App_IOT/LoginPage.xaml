<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_App_IOT.LoginPage"
             Title="LoginPage"
             BackgroundColor="#512bdf">

    <VerticalStackLayout Margin="15" Padding="30, 60, 30, 30">
        <Label Text="Please log in" FontSize="30" TextColor="AntiqueWhite" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Label Text="Username" TextColor="White" Margin="0,30,0,0"/>
        <Frame Padding="20,0,0,0" Margin="0,10,0,0" BorderColor="#0094FF" CornerRadius="50" BackgroundColor="#431ec8" HasShadow="True">
            <Entry TextColor="White"/>
        </Frame>
        <Label Text="Password" TextColor="White" Margin="0,30,0,0"/>
        <Frame Padding="20,0,0,0" Margin="0,10,0,0" BorderColor="#0094FF" CornerRadius="50" BackgroundColor="#431ec8" HasShadow="True">
            <Entry IsPassword="True" TextColor="White"/>
        </Frame>
        <Button Text="Log in" BackgroundColor="#0094FF" Clicked="LoginButton_Clicked" Margin="0,30,0,0"/>
    </VerticalStackLayout>

</ContentPage>